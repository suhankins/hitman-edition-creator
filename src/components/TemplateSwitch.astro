---
import ActionButton from './ActionButton.astro';

interface Props {
    selected?: 'default' | 'blank';
}

const { selected } = Astro.props;
---

<ActionButton
    data-default-template
    aria-current={selected === 'default'}
    href="/"
>
    Default
</ActionButton>
<ActionButton
    data-blank-template
    aria-current={selected === 'blank'}
    href="/blank"
>
    Blank
</ActionButton>

<style>
    [data-default-template]::before {
        background-image: url('/icons/ioi.svg');
    }

    [data-blank-template]::before {
        background-image: url('/icons/table.svg');
    }

    [data-default-template]:hover::before,
    [data-default-template]:focus::before,
    [data-default-template][aria-current='true']::before {
        background-image: url('/icons/ioi-hover.svg');
    }

    [data-blank-template]:hover::before,
    [data-blank-template]:focus::before,
    [data-blank-template][aria-current='true']::before {
        background-image: url('/icons/table-hover.svg');
    }
</style>
