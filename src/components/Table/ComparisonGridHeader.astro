<div class="container">
    <img
        data-logo
        class="logo"
        src="/logo.png"
        alt="Hitman: World of Assassination"
    />
    <img class="grid" src="/comparisongrid.svg" alt="Comparison Grid" />
</div>

<script>
    document
        .querySelector('[data-logo]')
        ?.addEventListener('click', (event) => {
            const target = event.target as HTMLImageElement;
            target.src = target.src.endsWith('/logo.png')
                ? '/logo_men.png'
                : '/logo.png';
        });
</script>

<style>
    .container {
        padding: 5px;
        width: 24ch;
        display: flex;
        flex-direction: column;
        gap: 1.5em;
        margin-left: auto;
        margin-right: auto;
    }
    .logo {
        width: 100%;
    }
    .grid {
        width: 80%;
        align-self: center;
    }
</style>
